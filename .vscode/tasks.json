{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "West build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "west"
            },
            "args": [
                "build",
                "-p",
                "auto",
                "-b",
                "xiao_esp32c3",
                "--",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "West flash",
            "type": "shell",
            "linux": {
                "command": "west"
            },
            "args": [
                "flash"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}