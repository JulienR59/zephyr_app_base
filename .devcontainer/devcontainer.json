{
  "image": "ghcr.io/zephyrproject-rtos/zephyr-build:latest",

  "forwardPorts": [3000],
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.cpptools-extension-pack",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "trond-snekvik.kconfig-lang",
        "trond-snekvik.devicetree",
        "ms-vscode.vscode-serial-monitor"
      ]
    }
  },
  "postCreateCommand": "sudo apt update && sudo apt install usbutils && cd /workdir && west init && west update && cd zephyr && source zephyr-env.sh",
  "postAttachCommand": "cat /workdir/zephyr/VERSION",

  "mounts": [{"source": "/dev", "target": "/dev", "type": "bind"}],
  "runArgs": ["--group-add=dialout"]
}